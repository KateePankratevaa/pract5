<Page x:Class="WpfApp5._1.Pages.ValidationInputPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp5._1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ValidationInputPage" Background="White">

    <Grid>
        <StackPanel Orientation="Vertical">
        <Label Content="Registration" Margin="10,15,0,0" FontSize="17" FontWeight="Bold"/>
            <Label Content="Name(only letters and spaces):" Margin="10,30,0,0"/>
            <TextBox Width="770"/>
            <Label Content="ID(only digits):" Margin="10,0,0,0"/>
            <TextBox Width="770"/>
            <Label Content="Age(only digits,10...100)" Margin="10,0,0,0"/>
            <TextBox Width="770"/>
            <Label Content="Phone" Margin="10,0,0,0"/>
            <TextBox Width="770"/>
            <Button Content="Submit" Width="771" Margin="0,40,0,0"/>
        </StackPanel>
    </Grid>
</Page>
